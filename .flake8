[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache
max-complexity = 15
per-file-ignores =
    backend/tests/*:F401,F841,E402,F811
    backend/document_processor.py:C901
